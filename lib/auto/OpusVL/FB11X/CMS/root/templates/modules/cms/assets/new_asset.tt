<script>
  $(function() {
      var preview = $('#dz-preview-template');
      preview.remove();
      preview.removeAttr('id');

      Dropzone.options.newAssetUpload = {
        previewTemplate: $('<div/>').append(preview).html()
      };
  });
</script>

