use DBIx::Class;
use Moose;
extends 'DBIx::Class';

__PACKAGE__->load_components("InflateColumn::DateTime", "Core");
__PACKAGE__->table("page_contents");
__PACKAGE__->add_columns(
  "content_id",
  {
    data_type => "integer",
    default_value => "nextval('page_contents_content_id_seq'::regclass)",
    is_nullable => 0,
    size => 4,
  },
  "page_id",
  { data_type => "integer", default_value => undef, is_nullable => 0, size => 4 },
  "status",
  {
    data_type => "character varying",
    default_value => "'Published'::character varying",
    is_nullable => 0,
    size => 128,
  },
  "body",
  {
    data_type => "character varying",
    default_value => undef,
    is_nullable => 0,
    size => undef,
  },
  "created",
  {
    data_type => "timestamp without time zone",
    default_value => "now()",
    is_nullable => 0,
    size => 8,
  },
);
__PACKAGE__->set_primary_key("content_id");
__PACKAGE__->belongs_to(
  "page",
  "OpusVL::CatalystX::SimpleCMS::Schema::Result::Pages",
  { page_id => "page_id" },
);


## 
1;
