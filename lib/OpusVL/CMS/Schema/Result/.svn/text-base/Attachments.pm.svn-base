use DBIx::Class;
use Moose;
extends 'DBIx::Class';

__PACKAGE__->load_components("InflateColumn::DateTime", "Core");
__PACKAGE__->table("attachments");
__PACKAGE__->add_columns(
  "att_id",
  {
    data_type => "integer",
    default_value => "nextval('attachments_att_id_seq'::regclass)",
    is_nullable => 0,
    size => 4,
  },
  "page_id",
  { data_type => "integer", default_value => undef, is_nullable => 0, size => 4 },
  "filename",
  {
    data_type => "character varying",
    default_value => undef,
    is_nullable => 0,
    size => 128,
  },
  "description",
  {
    data_type => "character varying",
    default_value => undef,
    is_nullable => 1,
    size => 255,
  },
  "mime_type",
  {
    data_type => "character varying",
    default_value => undef,
    is_nullable => 0,
    size => 128,
  },
  "data",
  {
    data_type => "bytea",
    default_value => undef,
    is_nullable => 0,
    size => undef,
  },
  "created",
  {
    data_type => "timestamp without time zone",
    default_value => "now()",
    is_nullable => 0,
    size => 8,
  },
);
__PACKAGE__->set_primary_key("att_id");
__PACKAGE__->belongs_to(
  "page",
  "OpusVL::CatalystX::SimpleCMS::Schema::Result::Pages",
  { page_id => "page_id" },
);

##
1;
