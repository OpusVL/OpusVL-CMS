use DBIx::Class;
use Moose;
extends 'DBIx::Class';

__PACKAGE__->load_components("InflateColumn::DateTime", "Core");
__PACKAGE__->table("tag_groups");
__PACKAGE__->add_columns(
  "group_id",
  {
    data_type => "integer",
    default_value => "nextval('tag_groups_group_id_seq'::regclass)",
    is_nullable => 0,
    size => 4,
  },
  "name",
  {
    data_type => "character varying",
    default_value => undef,
    is_nullable => 0,
    size => 128,
  },
  "cascade",
  {
    data_type => "boolean",
    default_value => "false",
    is_nullable => 0,
    size => 1,
  },
  "multiple",
  {
    data_type => "boolean",
    default_value => "false",
    is_nullable => 0,
    size => 1,
  },
);
__PACKAGE__->set_primary_key("group_id");
__PACKAGE__->has_many(
  "tags",
  "OpusVL::CatalystX::SimpleCMS::Schema::Result::Tags",
  { "foreign.group_id" => "self.group_id" },
);


